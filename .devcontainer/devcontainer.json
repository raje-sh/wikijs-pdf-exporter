{
  "name": "Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/audacioustux/devcontainers/taskfile:1": {},
    "ghcr.io/larsnieuwenhuizen/features/jqyq:0": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "WIKI_JS_EXAMPLE_DIR": "${localWorkspaceFolder}/wikijs"
  },
  "containerEnv": {
    "WIKI_BASE_URL": "http://host.docker.internal:3000"
  },
  "postCreateCommand": "npm install -g graphqurl"
}